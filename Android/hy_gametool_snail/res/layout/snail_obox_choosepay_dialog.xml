<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="30dp" >

        <TextView
            android:id="@+id/snail_obox_pay_faild_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:textColor="#000000"
            android:textSize="80sp"
            android:gravity="center"
            android:text="@string/snailobox_choosepay" />
        
        <Button
            android:id="@+id/snail_obox_pay_faild_button_ok"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="#ffffff"
            android:background="@drawable/common_gray_btn_selector"
            android:text="@string/snailobox_oboxpay"
            android:textSize="45sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/snail_obox_pay_faild_button_other"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="#ffffff"
            android:background="@drawable/snail_obox_pay_black_button_click"
            android:text="@string/snailobox_otherpay"
            android:textSize="45sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp" />
        
</LinearLayout>