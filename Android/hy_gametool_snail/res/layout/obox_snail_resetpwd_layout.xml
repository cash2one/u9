<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/obox_pay_sdk_ic_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/snail_resetpwd"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/obox_snail_radius_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/snail_resetpwd_account"
                style="@android:style/Theme.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/snail_yellow_input_selector"
                android:drawablePadding="8dp"
                android:hint="@string/snail_resetpwd_inputaccount"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#808080"
                android:textColorHint="@color/obox_hint_textcolor"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" >

                <RelativeLayout
                    android:id="@+id/get_code_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" >

                    <Button
                        android:id="@+id/snail_resetpwd_getcode"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_gray_btn_selector"
                        android:text="@string/snail_common_get_code"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/snail_resetpwd_getcode_timer"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_gray_btn_selector"
                        android:gravity="center"
                        android:textColor="@color/view_pager_title_bg"
                        android:textSize="28sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/snail_resetpwd_checkcode"
                    style="@android:style/Theme.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/get_code_layout"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/snail_yellow_input_selector"
                    android:ems="10"
                    android:layout_marginLeft="15dp"
                    android:hint="@string/snail_please_input_check_code"
                    android:inputType="number|textPassword"
                    android:maxLength="6"
                    android:paddingLeft="8dp"
                    android:textColor="#808080"
                    android:textColorHint="@color/obox_hint_textcolor"
                    android:textSize="30sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/snail_resetpwd_pwd"
                style="@android:style/Theme.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/snail_yellow_input_selector"
                android:drawablePadding="8dp"
                android:hint="@string/snail_pwd_new"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="8dp"
                android:textColor="#808080"
                android:textColorHint="@color/obox_hint_textcolor"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/snail_resetpwd_pwdagain"
                style="@android:style/Theme.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/snail_yellow_input_selector"
                android:drawablePadding="8dp"
                android:hint="@string/snail_pwd_new_again"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="8dp"
                android:textColor="#808080"
                android:textColorHint="@color/obox_hint_textcolor"
                android:textSize="30sp" />

            <Button
                android:id="@+id/snail_resetpwd_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_gray_btn_selector"
                android:text="@string/snail_complete"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>