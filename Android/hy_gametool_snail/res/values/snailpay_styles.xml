<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <dimen name="snailpay_btn_corners">4dp</dimen>
    <style name="SnailPayActivity">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
	
	<style name="snailpay_dialog_style" parent="@android:style/Theme.Dialog">
       <!--  <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item> -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
    </style>
    <style name="snail_pay_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="snailpay_item_card_normal">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/snailpay_bg_bottom</item>
    </style>
    <style name="snailpay_item_card_select">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/snailpay_bg_click</item>
    </style>
    <style name="snailpay_edit_text_style" parent="@android:style/Theme.Light">
        <item name="android:background">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#9b9b9b</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>