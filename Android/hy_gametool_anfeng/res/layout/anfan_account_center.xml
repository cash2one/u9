<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <com.anfeng.pay.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/anfan_def_user" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:background="#1AC269"
            android:text="V1"
            android:textColor="#fff"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/anfan_c999999"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="3dp"
                android:background="@color/anfan_ce5e5e5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_account"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_head"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="F币"
                android:textColor="@color/anfan_c999999"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_hide"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/af_button_hide"
            android:text="隐藏悬浮"
            android:textColor="@color/anfan_c999999"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/af_account_safe_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_gift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:scaleType="center"
                android:src="@drawable/anfan_gift" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/anfan_ce5e5e5" />

        <LinearLayout
            android:id="@+id/ll_strategy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/iv_strategy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:scaleType="center"
                android:src="@drawable/af_ico_game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/anfan_ce5e5e5" />

        <LinearLayout
            android:id="@+id/ll_forum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/iv_forum"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:scaleType="center"
                android:src="@drawable/anfan_forum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="论坛"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/anfan_line" />

    <RelativeLayout
        android:id="@+id/rl_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/anfan_update_ms"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text=" 修改密码"
            android:textColor="@color/anfan_c999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line_margin" />

    <RelativeLayout
        android:id="@+id/rl_account_safe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/imageView1"
            android:drawableLeft="@drawable/anfan_ico_phone"
            android:gravity="center_vertical"
            android:text=" 账户安全"
            android:textColor="@color/anfan_c999999" />

        <TextView
            android:id="@+id/tv_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/anfan_ico_arrow_right"
            android:text="有风险"
            android:textColor="#FFFF0000" />
    </RelativeLayout>

    <include layout="@layout/anfan_line_margin" />

    <RelativeLayout
        android:id="@+id/rl_call_center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/anfan_ico_service"
            android:gravity="center_vertical"
            android:text=" 客服中心"
            android:textColor="@color/anfan_c999999" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/rl_pay_fmoeny"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/anfan_ico_cost"
            android:gravity="center_vertical"
            android:text=" 充值F币"
            android:textColor="@color/anfan_c23c9ae" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line_margin" />

    <RelativeLayout
        android:id="@+id/rl_cost_record"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/anfan_consume_record"
            android:gravity="center_vertical"
            android:text=" 消费记录"
            android:textColor="@color/anfan_c999999" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line_margin" />

    <RelativeLayout
        android:id="@+id/rl_recharge_record"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/anfan_pay_record"
            android:gravity="center_vertical"
            android:text=" 充值记录"
            android:textColor="@color/anfan_c999999" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line_margin" />

    <RelativeLayout
        android:id="@+id/rl_fcoin_detail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/anfan_fmoney_detail"
            android:gravity="center_vertical"
            android:text=" F币详情"
            android:textColor="@color/anfan_c999999" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_ico_share"
            android:gravity="center_vertical"
            android:text=" 分享游戏获好礼"
            android:textColor="@color/anfan_c23c9ae" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line_margin" />

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_ico_about"
            android:gravity="center_vertical"
            android:text=" 关于我们"
            android:textColor="@color/anfan_c999999" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/anfan_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_ico_auto_login"
            android:gravity="center_vertical"
            android:text=" 自动登录游戏"
            android:textColor="@color/anfan_c999999" >
        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" >

            <ImageButton
                android:id="@+id/iv_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tb_auto_login"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:src="@drawable/af_button_auto_login" />

            <ToggleButton
                android:id="@+id/tb_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:textOff="@null"
                android:textOn="@null" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>