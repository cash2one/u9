<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9DDE1" />


    <RelativeLayout
        android:id="@+id/rl_wx"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_share_ic_wx"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text=" 分享到微信"
            android:textColor="@color/anfan_c999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="25dp"
        android:background="#D9DDE1" />

    <RelativeLayout
        android:id="@+id/rl_qq"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_share_ico_qq"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text=" 分享到QQ"
            android:textColor="@color/anfan_c999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
           android:layout_marginLeft="25dp"
        android:background="#D9DDE1" />
     <RelativeLayout
        android:id="@+id/rl_wb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_share_ico_wb"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text=" 分享到微博"
            android:textColor="@color/anfan_c999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
           android:layout_marginLeft="25dp"
        android:background="#D9DDE1" />
     <RelativeLayout
        android:id="@+id/rl_dx"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_share_ico_dx"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text=" 短信分享"
            android:textColor="@color/anfan_c999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
           android:layout_marginLeft="25dp"
        android:background="#D9DDE1" />
     <RelativeLayout
        android:id="@+id/rl_copy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:drawableLeft="@drawable/af_share_ico_copy"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text=" 复制链接"
            android:textColor="@color/anfan_c999999"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/anfan_ico_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9DDE1" />

</LinearLayout>