<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anfan_recharge_item_radiobutton"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/anfan_recharge_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/anfan_pay_amount_bg"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/anfan_recharge_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/anfan_recharge_item_iv"
        android:paddingLeft="10dp"
         android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>