<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/qmyx_17168_white">

    <RelativeLayout
        android:id="@+id/rl_red_bg"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:background="@drawable/qmyx_17168_red_envelope"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="30"
            android:textColor="@color/qmyx_17168_white"
            android:textSize="@dimen/qmyx_17168_text_size_50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_money"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/tv_money"
            android:text="￥"
            android:textColor="@color/qmyx_17168_white"
            android:textSize="@dimen/qmyx_17168_text_size_24"/>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="满100可用"
            android:textColor="@color/qmyx_17168_white"
            android:textSize="@dimen/qmyx_17168_text_size_20"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_is_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/qmyx_17168_icon_red_envelope_selected"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/rl_red_bg">

        <TextView
            android:id="@+id/tv_red_packet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/qmyx_17168_deep_black"
            android:textSize="@dimen/qmyx_17168_text_size_24"/>

        <TextView
            android:id="@+id/tv_red_packet_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_red_packet_title"
            android:textColor="@color/qmyx_17168_deep_grey"
            android:textSize="@dimen/qmyx_17168_text_size_20"/>
    </RelativeLayout>
</RelativeLayout>