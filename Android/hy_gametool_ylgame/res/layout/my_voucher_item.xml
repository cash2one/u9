<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="15.0dp" >

    <ImageView
        android:id="@+id/iv_voucher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/vou_unusing_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/iv_voucher"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_voucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="代金券名称"
            android:textColor="@color/personal_text1"
            android:textSize="@dimen/label_text_16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_date_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_voucher_name"
            android:layout_marginTop="6.0dip"
            android:text="有效期截止"
            android:textColor="@color/personal_text2"
            android:textSize="@dimen/label_text_12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_voucher_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_voucher_name"
            android:layout_marginTop="6.0dip"
            android:layout_toRightOf="@id/tv_date_hint1"
            android:background="@null"
            android:singleLine="true"
            android:text="2015-8-8"
            android:textColor="@color/personal_text2"
            android:textSize="@dimen/label_text_12sp" />

        <TextView
            android:id="@+id/tv_date_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_voucher_name"
            android:layout_marginTop="6.0dip"
            android:layout_toRightOf="@id/tv_voucher_date"
            android:background="@null"
            android:singleLine="true"
            android:text="小时内过期"
            android:textColor="@color/personal_text2"
            android:textSize="@dimen/label_text_12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/iv_using_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="可用"
        android:textColor="#59ae26"
        android:textSize="@dimen/label_text_16sp" />

</RelativeLayout>